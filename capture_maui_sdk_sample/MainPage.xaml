<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="capture_maui_sdk_sample.MainPage"
             BackgroundColor="Black">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="20,0"
            VerticalOptions="Center">

            <Image
                Source="socket.png"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <ScrollView HeightRequest="300" MaximumHeightRequest="300">
            <Frame BorderColor="Gray" CornerRadius="10">
            <Label
                x:Name="DataLabel"
                FontSize="18"
                HorizontalOptions="Center" />
            </Frame>
            </ScrollView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
